@model StudentIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Studenten</h1>

<p>
    <a asp-action="Create">Zich Inschrijven</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Geboortedatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Geboortedatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                 <a asp-action="Index"asp-area="" asp-controller="Inschrijvingens" >Inschrijvingen</a>|
                 <a asp-action="Index"asp-area="" asp-controller="Modules" >Module</a>
                  @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">| Edit</a> 
                            <a asp-action="Delete" asp-route-id="@item.Id">| Delete</a>
                        }
                    }
            </td>
        </tr>
}
    </tbody>
</table>